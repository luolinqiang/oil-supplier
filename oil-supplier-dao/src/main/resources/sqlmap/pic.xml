<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oil.supplier.dao.PicDao">
    <sql id="selectAll">
        <![CDATA[
        SELECT
		    `pic`.`id`,
		    `pic`.`type`,
		    `pic`.`pic_url` as picUrl,
		    `pic`.`owner_id` as ownerId,
		    `pic`.`order`,
		    `pic`.`create_time` as createTime,
		    `pic`.`update_time` as updateTime,
		    `pic`.`state`,
		    `pic`.`remark`,
		    `pic`.`link_url` as linkUrl
		FROM `pic`
        ]]>
	</sql>

    <select id="getAll" resultType="pic">
        <include refid="selectAll"/>
    </select>

    <insert id="insert" parameterType="pic" useGeneratedKeys="true">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        <![CDATA[
            INSERT INTO `pic`
				(
					`type`,
					`pic_url`,
					`owner_id`,
					`order`,
					`create_time`,
					`update_time`,
					`state`,
					`remark`,
					`link_url`,
					`content`
				)
				VALUES
				(
					#{type},
	                #{picUrl},
	                #{ownerId},
	                #{order},
	                now(),
	                now(),
	                #{state},
	                #{remark},
                    #{linkUrl},
                    #{content}
				)
                ]]>
    </insert>

    <update id="update" parameterType="pic">
        UPDATE   `pic`
        <trim prefix="SET" suffixOverrides=",">
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="picUrl != null and picUrl != ''">
                pic_url = #{picUrl},
            </if>
            <if test="ownerId != null and ownerId != ''">
                owner_id = #{ownerId},
            </if>
            <if test="order != null and order != ''">
                order = #{order},
            </if>
            <if test="state != null and state != ''">
                state = #{state},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="linkUrl != null">
                link_url = #{linkUrl},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            update_time = now(),
        </trim>
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
        </trim>
    </update>

    <select id="getById" parameterType="Long" resultType="pic">
        <include refid="selectAll"/>
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="value != null">
                and id = #{value}
            </if>
        </trim>
    </select>

    <select id="getList" parameterType="pic" resultType="pic">
        <include refid="selectAll"/>
        <trim prefix="WHERE" prefixOverrides="AND|OR" suffixOverrides=",">
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="ownerId != null and ownerId != ''">
                and owner_id = #{ownerId}
            </if>
            <if test="state != null and state != ''">
                and state = #{state}
            </if>
        </trim>
    </select>
</mapper>